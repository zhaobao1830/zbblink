  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.headline {
  margin-top: 30rpx;
  width: 97rpx;
  height: 42rpx;
}

.study {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 40rpx;
  right: 45rpx;
}


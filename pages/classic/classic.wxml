<!--pages/classic/classic.wxml-->
<view class="container">
  <view class="header">
    <v-episode class="episode" index="{{classic.index}}"></v-episode>
    <v-like class="like" bind:like="onLike" like="{{likeStatus}}" count="{{likeCount}}"></v-like>
  </view>
  <v-movie img="{{classic.image}}" content="{{classic.content}}"></v-movie>
  <v-navi bind:left="onNext" bind:right="onPrevious" title="{{classic.title}}" latest="{{latest}}" first="{{first}}" class="navi"></v-navi>
</view>
